{
  "name" : "chrodic",
  "version" : "0.2",
  "description" : "A mouseover dictionary implementation",
  "homepage_url" : "http://d.hatena.ne.jp/kkishi/",
  "permissions" : [
    "http://*/*"
  ],
  "content_scripts" : [
    {
      "matches" : [ "http://*/*", "https://*/*" ],
      "js" : [ "chrodic.js" ],
      "all_frames" : true
    }
  ],
  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page" : "options.html",
  "manifest_version" : 2
}
